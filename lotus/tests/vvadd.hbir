target{
  tile t[4][4] {
    memory g[10] {
      size : 8,
      width : 8
    }
  }
}
config{
  arrange t as {
    group top_half at (0 : xmax/2, 0 : ymax);
    group bot_half at (xmax/2 : xmax, 0 : ymax);
  }
}

data{
  in A : int[n] {
    location : t,
    layout : block
  }

  in B : int[n] {
    location : t,
    layout : block
  }

  out C : int[n] {
    location : t,
    layout : block
  }
}

code{
  t.top_half { 
    for i in [0:xmax] {
      C[i] = A[i] + B[i];
    }
  }

  t.bot_half { 
    for i in [0:xmax] {
      C[i] = A[i] + B[i];
    }
  }
}
