target{
  memory g {
    size : 8,
    width : 8
  }

  tile t[4][4] {
    memory g[10] {
      size : 8,
      width : 8
    }
  }
}
config{
  arrange t as {
    group top_half at (0 : xmax/2, 0 : ymax);
    group bot_half at (xmax/2 : xmax, 0 : ymax);
  }
}

data{
  int n = 160;

  in A : int[n] {
    location : g,
    layout : block
  }

  in B : int[n] {
    location : g,
    layout : block
  }

  out C : int[n] {
    location : g,
    layout : block
  }
}

code{
  t.g1 {
    for i in [block_size_A * tile_id : block_size_A * (tile_id + 1)] {
      C[i] = A[i] + B[i];
    }
  }
}

