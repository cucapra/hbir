target{
  memory g {
    size : 8,
    width : 8
  }

  tile t[4][4] {
    memory g[10] {
      size : 8,
      width : 8
    }
  }
}

config{
  arrange t as {
    group top_half at (0 : 2, 0 : 4);
    group bot_half at (2 : 4, 0 : 4);
  }
}

data{
  int n = 160;

  in A : int[n] {
    location : g,
    layout : block
  }

  in B : int[n] {
    location : g,
    layout : block
  }

  out C : int[n] {
    location : g,
    layout : block
  }
}

code {

  t.top_half {
    for i in [0:10] {
      C[i] = A[i] + B[i];
    }
  }

  t.bot_half {
    for i in [0:10] {
      C[i] = A[i] + B[i];
    }
  }
}

